<% if @accounts.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Account.human_attribute_name 'created_at' %></th>
          <th><%= Account.human_attribute_name 'name' %></th>
          <th><%= Account.human_attribute_name 'subdomain' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td class="col-md-2"><%= l account.created_at %></td>
            <td><%= account.name %></td>
            <td><%= account.subdomain %></td>
            <td><%= link_to_edit [:edit, account] %></td>
            <td><%= link_to_destroy account %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= link_to_new new_account_path, class: 'btn btn-primary' %>
