<div class="bs-callout bs-callout-info">
  <div class="page-header page-header-sm">
    <h4><%= t 'custom_templates.list' %></h4>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p>
        <strong><%= Customer.human_attribute_name 'current_date' %>:</strong>
        <%= '%{fecha}' %>
      </p>
      <p>
        <strong><%= Customer.human_attribute_name 'full_name' %>:</strong>
        <%= '%{nombre_completo}' %>
      </p>
      <p>
        <strong><%= Customer.human_attribute_name 'identification_type' %>:</strong>
        <%= '%{tipo_documento}' %>
      </p>
    </div>
    <div class="col-md-4">
      <p>
        <strong><%= Customer.human_attribute_name 'identification' %>:</strong>
        <%= '%{nro_documento}' %>
      </p>
      <p>
        <strong><%= MemberPayment.human_attribute_name 'period' %>:</strong>
        <%= '%{periodo}' %>
      </p>
      <p>
        <strong><%= MemberPayment.human_attribute_name 'amount' %>:</strong>
        <%= '%{monto}' %>
      </p>
    </div>
    <div class="col-md-4">
      <p>
        <strong><%= MemberPayment.human_attribute_name 'fecha_vencimiento' %>:</strong>
        <%= '%{fecha_vencimiento}' %>
      </p>
      <p>
        <strong><%= MemberPayment.human_attribute_name 'fecha_pago' %>:</strong>
        <%= '%{fecha_pago}' %>
      </p>
    </div>
  </div>
</div>
