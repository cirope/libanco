<% if @custom_templates.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= CustomTemplate.human_attribute_name 'created_at' %></th>
          <th><%= CustomTemplate.human_attribute_name 'name' %></th>
          <th><%= CustomTemplate.human_attribute_name 'header_template' %></th>
          <th><%= CustomTemplate.human_attribute_name 'footer_template' %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @custom_templates.each do |custom_template| %>
          <tr>
            <td><%= l custom_template.created_at %></td>
            <td><%= custom_template.name %></td>
            <td><%= custom_template.header_template %></td>
            <td><%= custom_template.footer_template %></td>
            <td><%= link_to_show custom_template %></td>
            <td><%= link_to_edit [:edit, custom_template] %></td>
            <td><%= link_to_destroy custom_template %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @custom_templates %>
<%= link_to_new new_custom_template_path, class: 'btn btn-primary' %>
