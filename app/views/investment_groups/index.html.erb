<% if @investment_groups.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= InvestmentGroup.human_attribute_name 'created_at' %></th>
          <th><%= InvestmentGroup.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @investment_groups.each do |investment_group| %>
          <tr>
            <td class="col-md-2"><%= l investment_group.created_at %></td>
            <td><%= investment_group.name %></td>
            <td><%= link_to_edit [:edit, investment_group] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @investment_groups %>
<%= link_to_new new_investment_group_path, class: 'btn btn-primary' %>
