<div class="page-header page-header-sm">
  <h3><%= @bank %></h3>
</div>

<% if @bank.bank_accounts.exists? %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= BankAccount.human_attribute_name 'account' %></th>
          <th><%= BankAccount.human_attribute_name 'cbu' %></th>
        </tr>
      </thead>

      <tbody>
        <% @bank.bank_accounts.each do |bank_account| %>
          <tr>
            <td><%= bank_account.account %></td>
            <td><%= bank_account.cbu %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <hr />
<% end %>

<%= link_to_edit [:edit, @bank] %> |
<%= link_to_index banks_path %>
