<%= simple_form_for [@loan, @payment], data: { remote: true } do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :paid_at, as: :date_picker, autofocus: true %>
      </div>
    </div>
  </div>

  <hr />

  <div class="actions">
    <%= submit_button f %>
  </div>
<% end %>
