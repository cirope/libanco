<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.input :capital %>
    <%= f.input :interest %>
    <%= f.input :tax %>
    <%= f.input :tax_perception %>
    <%= f.input :gross_income_perception %>
    <%= f.input :insurance %>
    <%= f.input :balance %>
    <%= f.input :amount %>
    <%= f.input :expire_at %>
    <%= f.input :paid_at %>
    <%= f.association :loan %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
