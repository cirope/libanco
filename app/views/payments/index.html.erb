<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Capital</th>
      <th>Interest</th>
      <th>Tax</th>
      <th>Tax perception</th>
      <th>Gross income perception</th>
      <th>Insurance</th>
      <th>Balance</th>
      <th>Amount</th>
      <th>Expire at</th>
      <th>Paid at</th>
      <th>Loan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.number %></td>
        <td><%= payment.capital %></td>
        <td><%= payment.interest %></td>
        <td><%= payment.tax %></td>
        <td><%= payment.tax_perception %></td>
        <td><%= payment.gross_income_perception %></td>
        <td><%= payment.insurance %></td>
        <td><%= payment.balance %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.expire_at %></td>
        <td><%= payment.paid_at %></td>
        <td><%= payment.loan %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

