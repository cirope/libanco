<% if @suppliers.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Supplier.human_attribute_name 'created_at' %></th>
          <th><%= Supplier.human_attribute_name 'legal_name' %></th>
          <th><%= Supplier.human_attribute_name 'tax_id' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td class="col-md-2"><%= l supplier.created_at %></td>
            <td><%= supplier.legal_name %></td>
            <td><%= supplier.tax_id %></td>
            <td><%= link_to_edit [:edit, supplier] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @suppliers %>
<%= link_to_new new_supplier_path, class: 'btn btn-primary' %>
