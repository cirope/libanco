<% if @employees.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Employee.human_attribute_name 'created_at' %></th>
          <th><%= Employee.human_attribute_name 'name' %></th>
          <th><%= Employee.human_attribute_name 'lastname' %></th>
          <th><%= Employee.human_attribute_name 'tax_id' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td class="col-md-2"><%= l employee.created_at %></td>
            <td><%= employee.name %></td>
            <td><%= employee.lastname %></td>
            <td><%= employee.tax_id %></td>
            <td><%= link_to_edit [:edit, employee] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @employees %>
<%= link_to_new new_employee_path, class: 'btn btn-primary' %>
