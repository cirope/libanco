<% if @customers.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Customer.human_attribute_name 'created_at' %></th>
          <th><%= Customer.human_attribute_name 'name' %></th>
          <th><%= Customer.human_attribute_name 'lastname' %></th>
          <th><%= Customer.human_attribute_name 'identification_type' %></th>
          <th><%= Customer.human_attribute_name 'identification' %></th>
          <th><%= Customer.human_attribute_name 'nacionality' %></th>
          <th><%= Customer.human_attribute_name 'cellphone' %></th>
          <th><%= Customer.human_attribute_name 'card' %></th>
          <th><%= Customer.human_attribute_name 'code' %></th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= l customer.created_at %></td>
            <td><%= customer.name %></td>
            <td><%= customer.lastname %></td>
            <td><%= t_field customer, 'identification_type' %></td>
            <td><%= customer.identification %></td>
            <td><%= customer.nacionality %></td>
            <td><%= customer.cellphone %></td>
            <td><%= customer.card %></td>
            <td><%= customer.code %></td>
            <td><%= t_boolean customer.member %></td>
            <td><%= link_to_show customer %></td>
            <td><%= link_to_customer_loans customer %></td>
            <td><%= link_to_edit [:edit, customer] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @customers %>
<%= link_to_new new_customer_path, class: 'btn btn-primary' %>
