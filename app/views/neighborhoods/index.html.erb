<% if @neighborhoods.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Neighborhood.human_attribute_name 'created_at' %></th>
          <th><%= Neighborhood.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @neighborhoods.each do |neighborhood| %>
          <tr>
            <td class="col-md-2"><%= l neighborhood.created_at %></td>
            <td><%= neighborhood.name %></td>
            <td><%= link_to_edit [:edit, neighborhood] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @neighborhoods %>
<%= link_to_new new_neighborhood_path, class: 'btn btn-primary' %>
