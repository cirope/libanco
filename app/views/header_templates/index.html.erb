<% if @header_templates.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= RequestTemplate.human_attribute_name 'created_at' %></th>
          <th><%= RequestTemplate.human_attribute_name 'name' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @header_templates.each do |header_template| %>
          <tr>
            <td><%= l header_template.created_at %></td>
            <td><%= header_template.name %></td>
            <td><%= link_to_show header_template %></td>
            <td><%= link_to_edit [:edit, header_template] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @header_templates %>
<%= link_to_new new_header_template_path, class: 'btn btn-primary' %>
