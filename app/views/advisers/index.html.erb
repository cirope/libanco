<% if @advisers.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Adviser.human_attribute_name 'created_at' %></th>
          <th><%= Adviser.human_attribute_name 'name' %></th>
          <th><%= Adviser.human_attribute_name 'lastname' %></th>
          <th><%= Adviser.human_attribute_name 'identification_type' %></th>
          <th><%= Adviser.human_attribute_name 'identification' %></th>
          <th><%= Adviser.human_attribute_name 'phone' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @advisers.each do |adviser| %>
          <tr>
            <td class="col-md-2"><%= l adviser.created_at %></td>
            <td><%= adviser.name %></td>
            <td><%= adviser.lastname %></td>
            <td><%= t_field adviser, 'identification_type' %></td>
            <td><%= adviser.identification %></td>
            <td><%= adviser.phone %></td>
            <td><%= link_to_show adviser %></td>
            <td><%= link_to_edit [:edit, adviser] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @advisers %>
<%= link_to_new new_adviser_path, class: 'btn btn-primary' %>
