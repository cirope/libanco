<% if @cash.cash_invoices.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= CashInvoice.human_attribute_name 'created_at' %></th>
          <th><%= CashInvoice.human_attribute_name 'user' %></th>
          <th><%= CashInvoice.human_attribute_name 'date' %></th>
          <th><%= CashInvoice.human_attribute_name 'invoice_type' %></th>
          <th><%= CashInvoice.human_attribute_name 'number' %></th>
          <th><%= CashInvoice.human_attribute_name 'supplier' %></th>
          <th><%= CashInvoice.human_attribute_name 'tax_condition' %></th>
          <th><%= CashInvoice.human_attribute_name 'payment_method' %></th>
          <th><%= CashInvoice.human_attribute_name 'amount' %></th>
          <th><%= CashInvoice.human_attribute_name 'detail' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @cash.cash_invoices.each do |cash_invoice| %>
          <tr>
            <td><%= l cash_invoice.created_at %></td>
            <td><%= cash_invoice.user %></td>
            <td><%= l cash_invoice.date %></td>
            <td><%= cash_invoice.invoice_type %></td>
            <td><%= cash_invoice.number %></td>
            <td><%= cash_invoice.supplier %></td>
            <td><%= cash_invoice.tax_condition %></td>
            <td><%= cash_invoice.payment_method %></td>
            <td><%= number_to_currency cash_invoice.amount %></td>
            <td><%= cash_invoice.detail %></td>
            <td><%= link_to_edit [:edit, @cash, cash_invoice], remote: true %></td>
            <td><%= link_to_destroy [@cash, cash_invoice], remote: true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<div class="pull-left">
  <%= link_to_new [:new, @cash, :cash_invoice], remote: true, class: 'btn btn-primary' %>
</div>
