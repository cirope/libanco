<% if @cash_invoice.new_record? || @cash_invoice.errors.any? %>
  $('#modal form').replaceWith('<%= j render('form') %>');
<% else %>
  $('#cash_invoices').html('<%= j render(template: 'cashes/cash_invoices/index', formats: [:html]) %>');
  $('#cash_vouchers').html('<%= j render(template: 'cashes/cash_vouchers/index', formats: [:html]) %>');
  $('#cash_balance').html('<%= number_to_currency @cash.balance %>');
  $('#modal').modal('hide');
<% end %>
