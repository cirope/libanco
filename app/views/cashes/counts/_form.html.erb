<%= simple_form_for @cash, url: cash_counts_path(@cash), remote: true do |f| %>
  <div class="form-inputs">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= Cash.model_name.human count: 1 %>
        </h3>
      </div>
      <div class="panel-body">
        <%= f.input :closing_balance, autofocus: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_button f %>
  </div>
<% end %>
