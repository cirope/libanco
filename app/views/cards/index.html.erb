<% if @cards.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Card.human_attribute_name 'created_at' %></th>
          <th><%= Card.human_attribute_name 'name' %></th>
          <th><%= Card.human_attribute_name 'admission_fee' %></th>
          <th><%= Card.human_attribute_name 'monthly_fee' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cards.each do |card| %>
          <tr>
            <td class="col-md-2"><%= l card.created_at %></td>
            <td><%= card.name %></td>
            <td><%= number_to_currency card.admission_fee %></td>
            <td><%= number_to_currency card.monthly_fee %></td>
            <td><%= link_to_edit [:edit, card] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @cards %>
<%= link_to_new new_card_path, class: 'btn btn-primary' %>
