<% if @states.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= State.human_attribute_name 'created_at' %></th>
          <th><%= State.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @states.each do |state| %>
          <tr>
            <td class="col-md-2"><%= l state.created_at %></td>
            <td><%= state.name %></td>
            <td><%= link_to_edit [:edit, state] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @states %>
<%= link_to_new new_state_path, class: 'btn btn-primary' %>
