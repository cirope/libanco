<div data-schedule="<%= schedule.to_param %>" data-object-info="<%= schedule.customer.to_param %>">
  <span <%== 'class="text-muted strike"' if schedule.done? %>>
    <span class="text-muted">
      <%= l schedule.scheduled_at, format: :time %>
    </span>
    <% if schedule.customer %>
      <span class="text-muted">|</span>
      <%= link_to schedule.customer, schedule.customer %>
    <% end %>
    <span class="text-muted">|</span>
    <%= schedule.description %>
  </span>
  <% if schedule.editable? %>
    <span class="text-muted">|</span>
    <%= link_to_edit(
      edit_polymorphic_path([schedule.customer, schedule]), data: { remote: true }
    ) %>
  <% end %>
  <% if schedule.doable? %>
    <span class="text-muted">|</span>
    <%= mark_schedule_as_done(schedule) %>
  <% end %>
</div>
