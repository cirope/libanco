<% if @nacionalities.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Nacionality.human_attribute_name 'created_at' %></th>
          <th><%= Nacionality.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @nacionalities.each do |nacionality| %>
          <tr>
            <td class="col-md-2"><%= l nacionality.created_at %></td>
            <td><%= nacionality.name %></td>
            <td><%= link_to_edit [:edit, nacionality] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @nacionalities %>
<%= link_to_new new_nacionality_path, class: 'btn btn-primary' %>
