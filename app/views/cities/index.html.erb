<% if @cities.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= City.human_attribute_name 'created_at' %></th>
          <th><%= City.human_attribute_name 'state' %></th>
          <th><%= City.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td class="col-md-2"><%= l city.created_at %></td>
            <td><%= city.state %></td>
            <td><%= city.name %></td>
            <td><%= link_to_edit [:edit, city] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @cities %>
<%= link_to_new new_city_path, class: 'btn btn-primary' %>
