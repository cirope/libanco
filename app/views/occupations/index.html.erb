<% if @occupations.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Occupation.human_attribute_name 'created_at' %></th>
          <th><%= Occupation.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @occupations.each do |occupation| %>
          <tr>
            <td class="col-md-2"><%= l occupation.created_at %></td>
            <td><%= occupation.name %></td>
            <td><%= link_to_edit [:edit, occupation] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @occupations %>
<%= link_to_new new_occupation_path, class: 'btn btn-primary' %>
