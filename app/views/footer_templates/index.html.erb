<% if @footer_templates.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= FooterTemplate.human_attribute_name 'created_at' %></th>
          <th><%= FooterTemplate.human_attribute_name 'name' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @footer_templates.each do |footer_template| %>
          <tr>
            <td class="col-md-2"><%= l footer_template.created_at %></td>
            <td><%= footer_template.name %></td>
            <td><%= link_to_show footer_template %></td>
            <td><%= link_to_edit [:edit, footer_template] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @footer_templates %>
<%= link_to_new new_footer_template_path, class: 'btn btn-primary' %>
