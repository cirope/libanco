<% if @workgroups.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Workgroup.human_attribute_name 'created_at' %></th>
          <th><%= Workgroup.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @workgroups.each do |workgroup| %>
          <tr>
            <td class="col-md-2"><%= l workgroup.created_at %></td>
            <td><%= workgroup.name %></td>
            <td><%= link_to_edit [:edit, workgroup] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @workgroups %>
<%= link_to_new new_workgroup_path, class: 'btn btn-primary' %>
