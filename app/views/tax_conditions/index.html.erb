<% if @tax_conditions.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= TaxCondition.human_attribute_name 'created_at' %></th>
          <th><%= TaxCondition.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @tax_conditions.each do |tax_condition| %>
          <tr>
            <td class="col-md-2"><%= l tax_condition.created_at %></td>
            <td><%= tax_condition.name %></td>
            <td><%= link_to_edit [:edit, tax_condition] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @tax_conditions %>
<%= link_to_new new_tax_condition_path, class: 'btn btn-primary' %>
