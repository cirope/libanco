<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= BankAccount.model_name.human(count: 0) %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <h5><strong><%= BankAccount.human_attribute_name 'account' %></strong></h5>
      </div>
      <div class="col-md-6">
        <h5><strong><%= BankAccount.human_attribute_name 'cbu' %></strong></h5>
      </div>
    </div>

    <%= f.simple_fields_for :bank_accounts, bank_accounts(f.object) do |rf| %>
      <%= render 'bank_accounts/bank_account', f: rf %>
    <% end %>

    <%= link_to_add_fields t('banks.bank_accounts.new'), f, :bank_accounts %>
  </div>
</div>
