<% if @payment_methods.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= PaymentMethod.human_attribute_name 'created_at' %></th>
          <th><%= PaymentMethod.human_attribute_name 'name' %></th>
          <th><%= PaymentMethod.human_attribute_name 'cash_discount' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @payment_methods.each do |payment_method| %>
          <tr>
            <td class="col-md-2"><%= l payment_method.created_at %></td>
            <td><%= payment_method.name %></td>
            <td><%= t_boolean payment_method.cash_discount %></td>
            <td><%= link_to_edit [:edit,payment_method] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @payment_methods %>
<%= link_to_new new_payment_method_path, class: 'btn btn-primary' %>
