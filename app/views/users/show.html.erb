<div class="page-header">
  <h2><%= @user %></h2>
</div>
<p>
  <strong><%= User.human_attribute_name 'name' %></strong>:
  <%= @user.name %>
</p>
<p>
  <strong><%= User.human_attribute_name 'lastname' %></strong>:
  <%= @user.lastname %>
</p>
<p>
  <strong><%= User.human_attribute_name 'email' %></strong>:
  <%= @user.email %>
</p>
<p>
  <strong><%= User.human_attribute_name 'roles_mask' %></strong>:
  <%= t "users.roles.#{@user.roles.first}" %>
</p>

<hr />

<%= link_to_edit edit_user_path(@user) %> |
