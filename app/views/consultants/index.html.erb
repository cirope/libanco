<% if @consultants.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= Consultant.human_attribute_name 'created_at' %></th>
          <th><%= Consultant.human_attribute_name 'name' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @consultants.each do |consultant| %>
          <tr>
            <td class="col-md-2"><%= l consultant.created_at %></td>
            <td><%= consultant.name %></td>
            <td><%= link_to_edit [:edit, consultant] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @consultants %>
<%= link_to_new new_consultant_path, class: 'btn btn-primary' %>
