<% if @body_templates.blank? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= BodyTemplate.human_attribute_name 'created_at' %></th>
          <th><%= BodyTemplate.human_attribute_name 'name' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @body_templates.each do |body_template| %>
          <tr>
            <td class="col-md-2"><%= l body_template.created_at %></td>
            <td><%= body_template.name %></td>
            <td><%= link_to_show body_template %></td>
            <td><%= link_to_edit [:edit, body_template] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<hr />

<%= paginate @body_templates %>
<%= link_to_new new_body_template_path, class: 'btn btn-primary' %>
